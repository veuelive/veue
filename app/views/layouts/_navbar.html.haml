.top-navbar
  .navbar-link
    .navbar-logo
      = image_tag 'main-logo', alt: 'Logo'
  .status-user
    - if user_signed_in?
      %ul
        %li
          = image_tag 'avatar-placeholder', class: 'status-user__profile', alt: 'profile'
        %li
          %p.status-user__text 
            = current_user.username.capitalize
        %li
          = image_tag 'down-arrow', class: 'status-user__arrow', alt: 'Arrow'
      .status-dropdown
        %ul
          %li
            = link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'list-item'
    - else
      %ul
        %li
          = link_to 'Login', new_user_session_path, class: 'list-item'

        %li
          = link_to 'Signup', new_user_registration_path, class: 'list-item'
