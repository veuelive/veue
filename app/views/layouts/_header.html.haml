%header
  .header__left
    .header__left__logo
      = link_to root_path do
        = svg_tag 'logo-full'
  .header__right
    - if user_signed_in?
      .menu-area{
        "data": {
          "controller": "user-menu",
          "user-id": current_user.id,
          "target": "user-menu.area",
          "is-open": "false",
          "action": "mouseenter->user-menu#openOrCloseEvent mouseleave->user-menu#openOrCloseEvent resize@window->user-menu#layout click->user-menu#openOrCloseEvent"
        }
      }
        = svg_tag "logo-circular"
        = svg_tag "chevron"
        %nav.user-menu{aria: {label: "Account Settings"}, data: {target: "user-menu.menu"}}
          .user-menu__text
            Settings
          %ul{role: "menubar"}
            %li.user-menu__name
              = current_user.display_name
            %li.user-menu__item{role: "menuitem"}
              = link_to "Profile", user_settings_path(user_id: current_user.id, anchor: 'profile')
            %li.user-menu__item{role: "menuitem"}
              = link_to "Privacy", user_settings_path(user_id: current_user.id, anchor: 'privacy')
            %li.user-menu__item{role: "menuitem"}
              = link_to "Help", user_settings_path(user_id: current_user.id, anchor: 'help')
            %li.user-menu__item{role: "menuitem"}
              = link_to "Sign Out", authentication_path, method: :delete
    - else
      %button{data: { action: "click->authentication#showModal"}}
        Login
