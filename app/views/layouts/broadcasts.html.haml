!!!
%html
  %head
    %meta{content: "text/html; charset=UTF-8", "http-equiv": "Content-Type"}/
    %meta{name: "viewport", content:"width=device-width, initial-scale=1"}/
    = render partial: 'layouts/gtm'
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_pack_tag 'broadcast', media: 'all'
    = javascript_pack_tag 'broadcast'
    = yield :header if content_for?(:header)
  %body{data: {"user-id": current_user&.id, controller: "authentication"}}
    #layout-container
      #main-container
        = yield
      = render partial: "shared/login_modal"
