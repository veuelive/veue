- if user_signed_in?
  %ul
    %li
      = image_tag 'avatar-placeholder', class: 'status-user__profile', alt: 'profile'
    %li
      %p.status-user__text
        = current_user.display_name
    %li
      = image_tag 'down-arrow', class: 'status-user__arrow', alt: 'Arrow'
  .status-dropdown
    %ul
      %li
        = link_to 'Sign Out', authentication_path, method: :delete, class: 'list-item'
- else
  .user-authentication{"data-controller": "authentication"}
    %button.list-item{data: { action: "click->authentication#showModal"}}
      Login
    = render :partial => "layouts/nav/login_modal"
