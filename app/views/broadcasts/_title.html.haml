= form_with model: @current_video, data: { controller: "broadcast--title" } do |form|
  = form.label :video, :title, style: "display: none;"
  = form.text_field :title, size: 60, maxlength: 240, placeholder: "Title your broadcast!"
  = form.submit "Update"

%form{data: { controller: { "broadcast--title" }}



