#broadcast{data: {controller: "broadcast broadcast--debug", broadcast: {"stream-key": current_user.mux_stream_key, "video-state": current_broadcast_video.state, "session-token": current_session_token.uuid}, "video-id": current_broadcast_video.id}}
  .content-area
    .content--left
      = render partial: "browser_bar"
    .content--right
      %video#webcam_preview{data: {target: "broadcast.webcamVideoElement"}}
      %canvas#audioCanvas
      .broadcast-commands
        -#.btn{data: {action: "click->broadcast#pinPage"}}= svg_tag "add"
        .btn{data: {controller: "broadcast--media-manager", action: "click->broadcast--media-manager#showHideMenu", "broadcast--media-manager": {"type": "audio"}}}
          = svg_tag "volume-max"
          .btn--tooltip
            Switch Microphone
        .btn{data: {controller: "broadcast--media-manager", action: "click->broadcast--media-manager#showHideMenu", "broadcast--media-manager": {"type": "video"}}}
          = svg_tag "cam"
          .btn--tooltip
            Switch Camera
        .btn{data: {action: "click->broadcast--debug#showHideAction"}}
          = svg_tag "toolbox"
          .btn--tooltip
            Debug Tools
        .btn#share-btn{data: {controller: "broadcast--share", action: "click->broadcast--share#showHideMenu"}}
          = svg_tag "share"
          .btn--tooltip
            Share Broadcast
          .select-menu{data: {target: "broadcast--share.menu"}}
            .item.open{data: {action: "click->broadcast--share#openLink"}} Open Link
            .item.copy{data: {action: "click->broadcast--share#copyLink"}} Copy Link

      .debug-area{data: {target: "broadcast--debug.debugArea"}}
      = render partial: "shared/chat", locals: { video: current_broadcast_video}

  - if Rails.env.test?
    = render partial: "title"
