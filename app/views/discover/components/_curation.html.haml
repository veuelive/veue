- if curation.collection.present?
  - if curation.display_type.strip?
    .discover__strip
      %h2= curation.title
      .discover__strip__items
        = render collection: curation.collection, partial: "shared/video_card", cached: true

  - if curation.display_type.grid?
    .broadcasts
      %h2.broadcasts__header= curation.title
      = render collection: curation.collection, partial: "shared/video_card", cached: true
