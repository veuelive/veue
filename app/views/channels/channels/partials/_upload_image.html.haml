.channel-edit__body__field__input.image-field{
  data: {
    controller: "crop--channel-icon",
    "crop--channel-icon": {
      id: @channel.id
    }
  }
}
  .channel-avatar
    = render partial: "channels/channels/partials/channel_icon", locals: { channel: @channel }
    .channel-avatar__info
      %div JPG, JPEG or PNG
      %div (Max. 5 MB.)
  .upload-image
    .upload-option
      .upload-option__button
        %input{type: "file", accept: 'image/png, image/jpg, image/jpeg', data: { target: "crop--channel-icon.imageField", action: "change->crop--channel-icon#processImage"}
        }
        %span Upload
        %span Image
      .upload-option__delete{data: {action: "click->crop--channel-icon#removeIcon"}}
        = svg_tag "delete-icon"
    .error-message{data: {target: "crop--channel-icon.imageMessage"}}
      Invalid Image
    .croppie-wrapper{data: {target: "crop--channel-icon.croppieWrapper"}}
      .croppie-wrapper__body.crop-area{data: {target: "crop--channel-icon.croppieField"}}
      .croppie-wrapper__action.crop-area
        %button{type: "button", data: {action: "click->crop--channel-icon#submitIcon"}} Submit
        %button.cancel-button{type: "button", data: {action: "click->crop--channel-icon#closeCropper"}} Discard
