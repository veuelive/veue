.pip-component{
  data: {
    target: "audience--movable-pip.pipComponent",
    action: "dragstart->audience--movable-pip#dragStartHandler"
  },
  draggable: "true",
}
  - if upcoming_stream?
    #no-webcam
      = svg_tag "no-webcam"
  - else
    %canvas.pip-secondary-canvas{
      "data-target": "audience-view.pipSecondaryCanvas",
      width: 420,
      height: 340
    }
.pip-drop-quadrants
  .quadrant.top-left{data: {corner: 'top-left', action: 'dragenter->audience--movable-pip#dragEnterHandler dragover->audience--movable-pip#dragOverHandler'}}
  .quadrant.top-right{data: {corner: 'top-right', action: 'dragenter->audience--movable-pip#dragEnterHandler dragover->audience--movable-pip#dragOverHandler'}}
  .quadrant.bottom-left{data: {corner: 'bottom-left', action: 'dragenter->audience--movable-pip#dragEnterHandler dragover->audience--movable-pip#dragOverHandler'}}
  .quadrant.bottom-right{data: {corner: 'top-right', action: 'dragenter->audience--movable-pip#dragEnterHandler dragover->audience--movable-pip#dragOverHandler'}}
