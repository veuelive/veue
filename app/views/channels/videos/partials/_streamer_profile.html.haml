.streamer-profile{ data: {controller: "streamer-profile", target: "canvas-size-observer.resizable"}}
  .streamer-profile__info
    .streamer-profile__info__avatar
      = current_channel.profile_image_circle(160)
    .streamer-profile__info__text
      .streamer-profile__info__text__name
        %a{href: channel_path(current_channel)}
          = current_channel.name
          - if current_channel.verified?
            = svg_tag 'verified'
      .streamer-profile__info__text__about
        = current_channel.about
    .streamer-profile__info__follow
      .streamer-profile__info__follow__count
        = svg_tag 'user-icon-dark'
        %span
          = current_channel.followers.size

      - if user_signed_in?
        - if current_user.follows?(current_channel)
          %button.unfollow-btn{data: { action: "click->streamer-profile#unfollow" }} Following
        - elsif current_channel.user != current_user
          %button.follow-btn{data: { action: "click->streamer-profile#follow" }} Follow
      - else
        %button.follow-btn{data: { action: "click->authentication#showModal" }} Follow
  - if current_channel.about.present?
    .streamer-profile__info__mobile__about
      = current_channel.about
  - if current_video&.scheduled?
    .streamer-profile__upcoming__broadcast
      .streamer-profile__upcoming__broadcast__text
        = svg_tag "clock"
        = "Upcoming Broadcast:"
      .streamer-profile__upcoming__broadcast__date
        %local-time{datetime: "#{current_video.scheduled_at.iso8601}", day: "numeric"}
          = current_video.scheduled_at.day
        %local-time{datetime: "#{current_video.scheduled_at.iso8601}", month: "long"}
          = current_video.scheduled_at.month
        = svg_tag "ellipse-2"
        %local-time{datetime: "#{current_video.scheduled_at.iso8601}", hour: "numeric", minute: "numeric"}
          = current_video.scheduled_at.strftime("%H:%M")
