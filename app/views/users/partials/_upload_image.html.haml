.profile-update__field.image-field{data: { controller: "crop--profile-image", id: @user.id } }
  .user-avatar
    = render partial: "users/partials/profile_image", locals: { user: @user }
    .user-avatar__info
      %div JPG, JPEG or PNG
      %div (Max. 5 MB.)
  .upload-image
    .upload-option
      .upload-option__button
        %input{type: "file", accept: 'image/png, image/jpg, image/jpeg', data: { target: "crop--profile-image.imageField", action: "change->crop--profile-image#processImage" }
        }
        %span Upload
        %span Image
      .upload-option__delete{data: {action: "click->crop--profile-image#removeImage"}}
        = svg_tag "delete-icon"
    .error-message{ "data-target": "crop--profile-image.imageMessage" }
      Invalid Image
    .croppie-wrapper{"data-target": "crop--profile-image.croppieWrapper"}
      .croppie-wrapper__body.crop-area{"data-target": "crop--profile-image.croppieField"}
      .croppie-wrapper__action.crop-area
        %button{type: "button", "data-action": "click->crop--profile-image#submitImage"} Submit
        %button.cancel-button{type: "button", "data-action": "click->crop--profile-image#closeCropper"} Discard
