.pip-component{
  data: {
    target: "audience--movable-pip.pipComponent"
  },
  draggable: "true",
}
  %canvas.pip-secondary-canvas{
    "data-target": "audience-view.pipSecondaryCanvas audience--pip.canvas",
    width: 420,
    height: 340
  }
.pip-drop-quadrants
  .quadrant.top-left{data: {target: 'audience--movable-pip.topLeft', action: 'ondragenter->audience--movable-pip#dragEnterHandler'}}
  .quadrant.top-right{data: {target: 'audience--movable-pip.topRight', action: 'click->audience--movable-pip#dragEnterHandler'}}
  .quadrant.bottom-left{data: {target: 'audience--movable-pip.bottomLeft', action: 'click->audience--movable-pip#dragEnterHandler'}}
  .quadrant.bottom-right{data: {target: 'audience--movable-pip.bottomRight', action: 'click->audience--movable-pip#dragEnterHandler'}}
