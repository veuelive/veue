.pip-component{
  data: {
    target: "audience--movable-pip.pipComponent",
    action: "dragstart->audience--movable-pip#dragStartHandler"
  },
  draggable: "true",
}
  %canvas.pip-secondary-canvas{
    "data-target": "audience-view.pipSecondaryCanvas audience--pip.canvas",
    width: 420,
    height: 340
  }
.pip-drop-quadrants
  .quadrant.top-left{data: {corner: 'top-left', target: 'audience--movable-pip.topLeft', action: 'dragenter->audience--movable-pip#dragEnterHandler dragover->audience--movable-pip#dragOverHandler'}}
  .quadrant.top-right{data: {corner: 'top-right', target: 'audience--movable-pip.topRight', action: 'dragenter->audience--movable-pip#dragEnterHandler dragover->audience--movable-pip#dragOverHandler'}}
  .quadrant.bottom-left{data: {corner: 'bottom-left', target: 'audience--movable-pip.bottomLeft', action: 'dragenter->audience--movable-pip#dragEnterHandler dragover->audience--movable-pip#dragOverHandler'}}
  .quadrant.bottom-right{data: {corner: 'top-right', target: 'audience--movable-pip.bottomRight', action: 'dragenter->audience--movable-pip#dragEnterHandler dragover->audience--movable-pip#dragOverHandler'}}
