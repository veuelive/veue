
.player-controls
  = play_button

  .time-display
    %span{"data-target": "audience--player-controls.timeDisplay audience-view.timeDisplay"}

  %span.progress-bar-container{
    data: {
      target: "audience--player-controls.progressBarContainer",
      action: "mousedown->audience--player-controls#handleMouseDown
               mouseup->audience--player-controls#handleMouseUp
               mousemove->audience--player-controls#handleMouseMove"
    }}
    %span.progress-bar{
      data: { target: "audience--player-controls.progressBar", currentTime: "0", duration: "0" }
    }

    %button.progress-bar-btn{
      data: { target: "audience--player-controls.progressBarButton" }
    }

  .time-display
    %span{"data-target": "audience-view.timeDuration audience--player-controls.timeDuration"}

  = audio_button

-# Need to be duplicated and removed parent due to positioning issues with absolute
.mobile-controls
  = play_button(mobile: true)
  = audio_button(mobile: true)

