.content-area{"data-controller": "audience-view", "data-audience-view-playback-id": current_video.mux_playback_id, "data-audience-view-video-id": current_video.id}
  .content-area__right__big
    #video-area
      .video-bar
        .video-bar__search
          %input.outline-none{ :placeholder => "https://www.nike.com/w/vapormax-shoes-220dzy7ok", :type => "text", "data-audience-view-address-value": current_video.slug, disabled: true }
          .upload
            = image_tag 'file-upload-icon', class: 'upload__file', alt: 'File'
        .video-bar__button
          %button.time-area.time-red
            %span.dot.time-dot
            1:36:24
      %canvas.browser-video-area{"data-target": "audience-view.browserVideoCanvas", width: 1280, height: 800}
      = render partial: 'videos/partials/player_buttons'
    = render partial: 'videos/partials/products_area'
  .content-area__left__small
    .user-stream-info
      .stream-area
        %canvas.streamer-webcam-view{"data-target": "audience-view.personVideoCanvas", width: 640, height: 480}
        %video.player__video.viewer{"data-action" => "canplay->audience-view#videoLoaded timeupdate->audience-view#progressUpdate", "data-target" => "audience-view.video", style: "display: none;"}
        -#.player__controls
        -#  .progress{"data-action" => "click->video-player#scrub mousedown->video-player#mousedown mouseup->video-player#mouseup mousemove->video-player#mousemove", "data-target" => "video-player.progress"}
        -#    .progress__filled{"data-target" => "video-player.progressBar"}
        -#  %input.player__slider{alt: "Volume", "data-action" => "change->video-player#rangeUpdate mousemove->video-player#rangeUpdate", :max => "1", :min => "0", :name => "volume", :step => "0.05", :type => "range", :value => "1"}/
        -#  %input.player__slider{"data-action" => "change->video-player#rangeUpdate mousemove->video-player#rangeUpdate", :max => "2", :min => "0.5", :name => "playbackRate", :step => "0.1", :type => "range", :value => "1"}/
