    -#  %button.player__button{"data-action" => "click->video-player#skip", "data-skip" => "25"} 25s »
    .chat-section
      .web-account-header
        .web-comment-section
          .web-comment-grid{ id: "video-chat-#{@video.id}" }
            - @video.chat_messages.each do |message|
              / .web-comment-image
              /   = image_tag message.user.profile_avatar
              .web--message
                %p.web--message__name
                  = message.user.full_name
                %label.web--message__label
                  = message.body
      - if user_signed_in?
        = form_for ChatMessage.new, remote: true do |f|
          .web-message-write
            .write-area
              = f.hidden_field :video_id, value: @video.id
              = f.text_area :body, class: 'write-area__text', placeholder: 'write your message...'
          = f.submit 'Message'
