        -#  %button.player__button{"data-action" => "click->video-player#skip", "data-skip" => "25"} 25s »
      .p-1
        .streamer-profile
          .streamer-info
            .streamer-info__avatar
              = inline_svg_pack_tag 'media/images/user.svg'
              .streamer-name
                = current_video.user.display_name
            .follow-btn
              follow
          .stream-info
            .stream-num
              stream # 4
            .stream-name
              high‑performance wireless earphones
