{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["dom", "ESNext"],
    "module": "es6",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "app/javascript/*"]
    },
    "sourceMap": true,
    "target": "ES2015"
  },
  "typeRoots": ["./app/javascript/", "./node_modules/@types"],
  "exclude": [
    "**/*.spec.ts",
    "node_modules",
    "vendor",
    "public",
    "broadcaster"
  ],
  "compileOnSave": false
}
