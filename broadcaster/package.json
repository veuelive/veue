{
  "name": "deskie",
  "productName": "Veue Broadcaster",
  "version": "0.0.0",
  "description": "My praiseworthy app",
  "license": "MIT",
  "repository": "veuelive/deskie",
  "author": {
    "name": "Hampton Catlin",
    "email": "hcatlin@veuelive.com",
    "url": "veuelive.com"
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "lint": "xo",
    "test": "npm run lint",
    "build": "webpack --config ./webpack.config.js",
    "start": "yarn build && ENVIRONMENT=localhost electron .",
    "pack": "yarn build && electron-builder --dir",
    "dist": "yarn build && electron-builder --macos",
    "release": "np"
  },
  "dependencies": {
    "electron-context-menu": "^0.15.0",
    "electron-debug": "^3.0.0",
    "electron-store": "^5.1.0",
    "electron-unhandled": "^3.0.0",
    "electron-updater": "^4.0.6",
    "electron-util": "^0.13.0",
    "ts-loader": "^8.0.7",
    "webpack": "^5.3.2",
    "webpack-cli": "^4.1.0"
  },
  "devDependencies": {
    "electron": "^7.1.1",
    "electron-builder": "^21.2.0",
    "np": "^5.0.3",
    "typescript": "^4.0.5",
    "xo": "^0.25.3"
  },
  "xo": {
    "envs": [
      "node",
      "browser"
    ]
  },
  "np": {
    "publish": false,
    "releaseDraft": false
  },
  "build": {
    "appId": "com.hamptoncatlin.veue",
    "mac": {
      "category": "public.app-category.social-networking",
      "darkModeSupport": false,
      "entitlements": "entitlements.mac.plist",
      "extendInfo": {
        "NSMicrophoneUsageDescription": "Please give us access to your microphone",
        "NSCameraUsageDescription": "Please give access to your webcam"
      },
      "files": [
        "!bin/win${/*}"
      ]
    },
    "dmg": {
      "iconSize": 160,
      "contents": [
        {
          "x": 180,
          "y": 170
        },
        {
          "x": 480,
          "y": 170,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Network;Chat"
    }
  }
}
