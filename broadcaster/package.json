{
  "name": "deskie",
  "productName": "Veue Broadcaster",
  "version": "0.1.5",
  "description": "My praiseworthy app",
  "license": "MIT",
  "repository": "veuelive/veue",
  "author": {
    "name": "Hampton Catlin",
    "email": "hcatlin@veuelive.com",
    "url": "veuelive.com"
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "lint": "xo",
    "test": "npm run lint",
    "build": "webpack --config ./webpack.config.js",
    "start": "yarn build && ENVIRONMENT=localhost electron .",
    "pack": "yarn build && electron-builder --dir",
    "dist": "yarn build && electron-builder --macos",
    "release": "yarn build && electron-builder -mw --publish always"
  },
  "dependencies": {
    "@logdna/logger": "^2.1.0",
    "electron-context-menu": "^2.3.0",
    "electron-debug": "^3.1.0",
    "electron-store": "^6.0.1",
    "electron-unhandled": "^3.0.2",
    "electron-updater": "^4.3.5",
    "electron-util": "^0.14.2",
    "logdna-winston": "^3.0.2",
    "semver": "^7.3.4",
    "ts-loader": "^8.0.7",
    "webpack": "^5.3.2",
    "webpack-cli": "^4.1.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "electron": "^11.1.0",
    "electron-builder": "^22.9.1",
    "np": "^5.0.3",
    "standard-version": "^9.0.0",
    "typescript": "^4.0.5",
    "xo": "^0.25.3"
  },
  "xo": {
    "envs": [
      "node",
      "browser"
    ]
  },
  "np": {
    "publish": false,
    "releaseDraft": false
  },
  "build": {
    "publish": {
      "provider": "s3",
      "bucket": "veue-production",
      "path": "/broadcaster-release",
      "region": "us-east-1",
      "storageClass": "STANDARD"
    },
    "appId": "com.hamptoncatlin.veue",
    "files": [
      "!bin"
    ],
    "mac": {
      "category": "public.app-category.social-networking",
      "darkModeSupport": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "hardenedRuntime": true,
      "extendInfo": {
        "NSMicrophoneUsageDescription": "Please give us access to your microphone",
        "NSCameraUsageDescription": "Please give access to your webcam"
      },
      "extraResources": [
        "bin/mac/**"
      ]
    },
    "dmg": {
      "sign": false,
      "iconSize": 160,
      "contents": [
        {
          "x": 180,
          "y": 170
        },
        {
          "x": 480,
          "y": 170,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Network;Chat"
    }
  }
}
